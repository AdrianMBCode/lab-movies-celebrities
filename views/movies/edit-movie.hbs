<h2>Movie Edit</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
<label for="title" class="form-label" >Title</label>
<input type="text" class="form-control" id="title" name="title" placeholder="{{movie.title}}">
<label for="genre" class="form-label" >Genre</label>
<input type="text" class="form-control" id="genre" name="genre" placeholder="{{movie.genre}}">
<label for="plot" class="form-label" >Plot</label>
<input type="text" class="form-control" id="plot" name="plot" placeholder="{{movie.plot}}">
<select name="cast" id="cast">
    {{#each celebrities}}
    <option value="{{_id}}">{{name}}</option>
    {{/each}}
</select>
<button type="submit" class="btn btn-primary">Edit movie</button>

</form>
